rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is authenticated
    function isAuth() {
      return request.auth != null;
    }

    // users collection: Users can read their own profile, Admins can read all
    match /users/{userId} {
      allow read: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow write: if false; // Only manageable via Cloud Functions
    }

    // playlists collection: Students can read if they have access, Admins read/write all
    match /playlists/{playlistId} {
      allow read: if isAdmin() || (isAuth() && exists(/databases/$(database)/documents/playlistAccess/$(playlistId + '_' + request.auth.uid)));
      allow write: if isAdmin();
    }

    // videos collection: Accessible if user has access to parent playlist
    match /videos/{videoId} {
      allow read: if isAdmin() || (isAuth() && exists(/databases/$(database)/documents/playlistAccess/$(resource.data.playlistId + '_' + request.auth.uid)));
      allow write: if isAdmin();
    }

    // playlistAccess collection: Used for access checks
    match /playlistAccess/{accessId} {
      allow read: if isAuth() && (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }

    // uploadQueue collection: Admin only
    match /uploadQueue/{itemId} {
      allow read, write: if isAdmin();
    }
  }
}
